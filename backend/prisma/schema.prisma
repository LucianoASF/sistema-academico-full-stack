generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  administrador
  aluno
  professor
}

model Usuario {
  id                  Int                   @id @default(autoincrement())
  nome                String                @db.VarChar(100)
  email               String                @unique @db.VarChar(100)
  telefone            String                @db.VarChar(11)
  cpf                 String                @unique @db.VarChar(11)
  dataNascimento      DateTime              @map("data_nascimento")
  senha               String                @db.VarChar(60)
  role                Role
  DisciplinaRealizada DisciplinaRealizada[]
  Matricula           Matricula[]
  matriculaCurso      matriculaCurso[]

  @@map("usuarios")
}

model Curso {
  id             Int              @id @default(autoincrement())
  nome           String           @db.VarChar(45)
  Grades         Grade[]
  matriculaCurso matriculaCurso[]

  @@map("cursos")
}

enum Status {
  cursando
  finalizado
  trancado
  abandonado
}

model matriculaCurso {
  id         Int      @id @default(autoincrement())
  dataInicio DateTime @map("data_inicio")
  dataFim    DateTime @map("data_fim")
  status     Status
  usuarioId  Int      @map("usuario_id")
  cursoId    Int      @map("curso_id")
  usuario    Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  curso      Curso    @relation(fields: [cursoId], references: [id], onDelete: Cascade)

  @@map("matriculas_cursos")
}

model Disciplina {
  id                  Int                   @id @default(autoincrement())
  nome                String                @db.VarChar(45)
  quantidadeAulas     Int                   @map("quantidade_aulas")
  grades              Grade[]
  DisciplinaRealizada DisciplinaRealizada[]

  @@map("disciplinas")
}

model Grade {
  id          Int          @id @default(autoincrement())
  versao      Int
  cursoId     Int          @map("curso_id")
  curso       Curso        @relation(fields: [cursoId], references: [id], onDelete: Cascade)
  disciplinas Disciplina[]

  @@map("grades")
}

model DisciplinaRealizada {
  id           Int         @id @default(autoincrement())
  dataInicio   DateTime    @map("data_inicio")
  dataFim      DateTime?   @map("data_fim")
  disciplinaId Int         @map("disciplina_id")
  professorId  Int         @map("professor_id")
  disciplina   Disciplina  @relation(fields: [disciplinaId], references: [id], onDelete: Cascade)
  usuario      Usuario     @relation(fields: [professorId], references: [id], onDelete: Cascade)
  Aula         Aula[]
  Avaliacao    Avaliacao[]
  Matricula    Matricula[]

  @@map("disciplinas_realizadas")
}

model Aula {
  id                    Int                 @id @default(autoincrement())
  descricao             String              @db.VarChar(100)
  disciplinaRealizadaId Int                 @map("disciplina_realizada_id")
  disciplinaRealizada   DisciplinaRealizada @relation(fields: [disciplinaRealizadaId], references: [id], onDelete: Cascade)
  presenca              Presenca[]

  @@map("aulas")
}

model Avaliacao {
  id                    Int                 @id @default(autoincrement())
  nome                  String              @db.VarChar(60)
  valor                 Int
  disciplinaRealizadaId Int                 @map("disciplina_realizada_id")
  disciplinaRealizada   DisciplinaRealizada @relation(fields: [disciplinaRealizadaId], references: [id], onDelete: Cascade)
  nota                  Nota[]

  @@map("avaliacoes")
}

model Matricula {
  id                    Int                 @id @default(autoincrement())
  notaFinal             Int?                @map("nota_final")
  presencaFinal         Int?                @map("presenca_final")
  alunoId               Int                 @map("aluno_id")
  disciplinaRealizadaId Int                 @map("disciplina_realizada_id")
  usuario               Usuario             @relation(fields: [alunoId], references: [id], onDelete: Cascade)
  disciplinaRealizada   DisciplinaRealizada @relation(fields: [disciplinaRealizadaId], references: [id], onDelete: Cascade)
  presenca              Presenca[]
  nota                  Nota[]

  @@map("matriculas")
}

model Presenca {
  id          Int       @id @default(autoincrement())
  presente    Boolean
  matriculaId Int       @map("matricula_id")
  aulaId      Int       @map("aula_id")
  matricula   Matricula @relation(fields: [matriculaId], references: [id], onDelete: Cascade)
  aula        Aula      @relation(fields: [aulaId], references: [id], onDelete: Cascade)

  @@map("presencas")
}

model Nota {
  id          Int       @id @default(autoincrement())
  valorObtido Decimal   @map("valor_obtido") @db.Decimal(4, 2)
  matriculaId Int       @map("matricula_id")
  avaliacaoId Int       @map("avaliacao_id")
  matricula   Matricula @relation(fields: [matriculaId], references: [id], onDelete: Cascade)
  avaliacao   Avaliacao @relation(fields: [avaliacaoId], references: [id], onDelete: Cascade)

  @@map("notas")
}
